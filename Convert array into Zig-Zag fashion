//Convert array into Zig-Zag fashion
a < b > c < d > e < f.

void zigzag(int arr[], int n)
{
  bool flag = true;
  for(int i = 0; i<=n-2 ;i++)
  {
      if(flag)
      {
        if(arr[i] > arr[i+1])
           swap(arr[i], arr[i+1]);
      }
      else
      {
          if(arr[i] < arr[i+1])
            swap(arr[i], arr[i+1]);
      }
      flag = !flag;
}
